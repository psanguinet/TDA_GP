<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Clínica Médica</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.11/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>


    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/buttons/1.1.2/js/dataTables.buttons.min.js"></script>

    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/buttons/1.1.2/js/buttons.print.min.js"></script>


    <script src="@Url.Content("~/Content/DataTables/js/HelperDataTables.js")" type="text/javascript"></script>

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Clínica Médica Montevideo", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                @if (Request.IsAuthenticated)
                {
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>


                            @if (User.IsInRole("DOCTOR"))
                            {
                                <li>@Html.ActionLink("Agenda", "Index", "Agenda")</li>
                                <li>@Html.ActionLink("Análisis Clínicos", "../AnalisisClinico/Index", "AnalisisClinico")</li>
                                <li>@Html.ActionLink("Historia Médica", "../HistoriaMedica/ReporteHistoriaMedica", "HistoriaMedica")</li>
                                <li>@Html.ActionLink("Informe de Consultas", "../InformeConsulta/Index", "InformeConsulta")</li>
                                <li>@Html.ActionLink("Informes de impresión", "../Informe/Index", "Informe")</li>
                            }

                            @if (User.IsInRole("PACIENTE"))
                            {
                                <li>@Html.ActionLink("Consultas", "../Consulta/Index", "Consulta")</li>
                                <li>@Html.ActionLink("Historia Médica", "../HistoriaMedica/Index", "HistoriaMedica")</li>

                            }
                            @if (User.IsInRole("DIRECTOR"))
                            {
                                <li>@Html.ActionLink("Reportes", "../Reporte/Index", "Reporte")</li>
                                <li>@Html.ActionLink("Administración", "Index", "Administracion")</li>
                                <li>@Html.ActionLink("Liquidación de sueldos", "Index", "Administracion")</li>

                            }



                        </ul>
                    </nav>
                }
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Taller de diseño de Aplicaciones.</p>
            </div>
            <div class="float-right">
                <p> @Html.ActionLink("Contacto", "Contact", "Home")</p>
            </div>
    </footer>

    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)


</body>
</html>
