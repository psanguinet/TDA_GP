@model IEnumerable<Modelo.Models.AnalisisClinico>
@{
    ViewBag.Title = "InformeAnalisisClinicoExtenso";
}

<h2>Informe Analisis Clinico Extenso</h2>

<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Detalle
        </th>
        <th>
            Paciente
        </th>
        <th>
            Grupo sanguíneo
        </th>
        <th>
            Peso
        </th>
        <th>
            altura
        </th>
        <th>
            Doctor responsable
        </th>
        <th>
            Resultado
        </th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nombre) @Html.DisplayFor(modelItem => item.Paciente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.GrupoSanguineo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Nombre) @Html.DisplayFor(modelItem => item.Doctor.Apellido)
            </td>
            <td>
                <ul>

                    @foreach (var result in item.ListResultadoAnalisis)
                    {
                        <li>
                            @Html.Display(result.Nobmre) @Html.Display(result.Resultado)
                        </li>
                    }
                </ul>
            </td>

        </tr>
    }

</table>


<div>
    @Html.ActionLink("<< Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}